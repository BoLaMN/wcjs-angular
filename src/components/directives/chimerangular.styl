pt-detail
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  z-index: 9
  
chimerangular, [chimerangular] 
  width: 100%
  height: 100%
  position: relative
  background-color: #000000
  display: block
  flex-direction: column
  -webkit-touch-callout: none
  -webkit-user-select: none
  user-select: none

  button
    cursor: pointer

  &.fullscreen
    position: fixed
    left: 0
    top: 0

  wc-media
    width: 100%
    height: 100%
    max-width: 100%
    max-height: 100%

    display: block

    canvas
      width: 100%
      height: 100%
      max-width: 100%
      max-height: 100%
    
  .iconButton
    color: #FFFFFF
    font-family: 'videogular'
    speak: none
    font-style: normal
    font-weight: normal
    font-variant: normal
    text-transform: none
    line-height: 1
    -webkit-font-smoothing: antialiased
    background: none
    padding: 6px
    border: none

  .iconButton:focus
    border: 1px solid white