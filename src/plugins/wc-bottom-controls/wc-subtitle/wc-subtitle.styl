wc-subtitle
  display: table-cell
  width: 50px
  vertical-align: middle
  text-align: center
  cursor: pointer
  color: white
  font-size: 14px
  
  button
    display: block
    
  wc-subtitle-selector ul
    width: 50px
    bottom: 50px
    margin: 0
    padding-left: 0
    vertical-align: middle
    text-align: center
    position: absolute
    cursor: pointer
    list-style: none
    
    li
      line-height: 16px
      padding: 5px
      opacity: 0.7
      background-color: #222222
      margin: 1px 0
      
      &:hover
        opacity: 1
  
  ul li.active
    background-color: #333333
