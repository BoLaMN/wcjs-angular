/* Poster plugin */
/*****************/
  wc-poster
    width: 100%
    height: 100%
    max-width: 100%
    max-height: 100%
    position: absolute
    display: block
    top: 0
    pointer-events: none

  wc-poster img
    max-width: 100%
    max-height: 100%
    top: 0
    bottom: 0
    right: 0
    left: 0
    margin: auto
    position: absolute
    height 100vh
    width 100vwo
    opacity 0
    background-size cover
    pointer-events: none
    -webkit-filter brightness(45%)
    transition opacity 200ms ease-in
    
    &.fadein
        opacity: 1
