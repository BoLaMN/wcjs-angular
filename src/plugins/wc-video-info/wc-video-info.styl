wc-video-info
  width: 100vw
  height: 100vh
  left: 0
  right: 0
  bottom: 0 
  display: block
  position: absolute
  z-index: 3

  page-header
    display block
    padding 50px 40px 0 40px
    height 8vh
    position relative
    z-index 3
        
    .back
        float left
        position relative
        margin-right 46px !important
            
    .title
        color #FFF
        float left
        position: relative
        line-height 43px
        max-width 80vw
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        font-size 42px
        font-weight 500
        letter-spacing 0.7

    md-icon.material-icons
        height 42px
        width 42px
        color #FFF
        line-height 43px
        font-size 42px
        font-weight 500

  .episode-info
    color #fff
    margin-top 55px
    margin-left 100px
    font-size 26px
    font-weight 500
    position absolute

  .meta-container
    width calc(100vw - 107px - 107px)
    height 80vh
    left 107px
    position relative
    top calc(((100vh - 152px) / 2))
    position absolute
    .status
      color #fff
      width 100%
      margin-bottom 30px
      text-align center
      font-size 22px
      font-weight 500
    .progressbar
      width 100%
      position relative
      height 4px
    .stats
      width: 100%
      text-align: center
      color: #fff
      opacity: .75
      font-size: 16px
      margin-top: 30px

@media (max-height: 700px)
  wc-torrent-info
    .meta-container
      width calc(100vw - 85px - 85px)
      left 85px
      right 85px